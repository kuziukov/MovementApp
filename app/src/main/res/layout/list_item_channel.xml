<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="0dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_no_avatar"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/chat_name_txt"
        style="@style/Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@id/icon"
        android:gravity="center_vertical"
        android:text="Dmitrii Kuziukov"
        android:textColor="@color/colorLightBlack"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/chat_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/chat_description"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:text="12:04PM"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/chat_notifs_txt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/chat_date_txt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/circle_notification_drawable"
        android:gravity="center_vertical"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/chat_last_message_status"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_below="@id/chat_name_txt"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@id/icon"
        app:srcCompat="@drawable/ic_done_all_black_24dp" />

    <TextView
        android:id="@+id/chat_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_name_txt"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:maxWidth="220dp"
        android:layout_toEndOf="@+id/chat_last_message_status"
        android:layout_toRightOf="@id/chat_last_message_status"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="jkhdsakjdhsakjdhaskjdhk jshadkjhsadkjshadksahdkjsahdkahsljkdjsadjaskdjsajd slajdlksajdlksajdklsajdl"
        android:textColor="@color/colorGray"
        android:textSize="14sp" />

    <TextView
        android:layout_below="@id/icon"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorLightGray"
        android:layout_toRightOf="@id/icon"
        android:layout_toEndOf="@+id/icon" />
</RelativeLayout>