<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_no_avatar"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />


            <TextView
                android:id="@+id/chat_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/icon"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:text="Dmitrii Kuziukov"
                android:textColor="@color/colorGray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat_name_txt"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/icon"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_rating"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:text="4.7"
                android:textSize="12sp"
                android:textColor="@color/colorGray" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center_vertical"
                android:text="&#8381; 1400"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/time_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Moscow"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/city_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_departure"
                android:layout_alignStart="@+id/time_departure"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="12:40 AM"
                android:textSize="12dp" />

            <View
                android:id="@+id/icon_car"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_car" />

            <TextView
                android:id="@+id/time_least"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_car"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="02:40"
                android:textSize="11sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/date_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_departure"
                android:layout_alignStart="@+id/time_departure"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans"
                android:text="Mar 24, 2020"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/time_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Kazan"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/city_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_arrival"
                android:layout_alignEnd="@+id/time_arrival"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="15:20 PM"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/date_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_arrival"
                android:layout_alignEnd="@+id/time_arrival"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans"
                android:text="Mar 24, 2020"
                android:textSize="12sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/icon"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/icon"
                android:layout_toRightOf="@id/icon"
                android:background="@color/colorLightGray" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvAnimalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>


</LinearLayout>